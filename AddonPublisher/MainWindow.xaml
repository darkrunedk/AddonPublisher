<Window x:Class="AddonPublisher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonPublisher"
        mc:Ignorable="d"
        Title="MainWindow" Height="270" Width="500">
    <StackPanel Margin="10">
        <TextBlock Text="Select folder to zip:" Margin="0,0,0,5"/>
        <Button Content="Browse Folder" Click="BrowseFolder_Click" Margin="0,0,0,10"/>
        <TextBlock Text="Select .toc file (if multiple):" Margin="0,10,0,5"/>
        <ListBox x:Name="TocFileList" Visibility="Collapsed" Height="100" SelectionMode="Single" SelectionChanged="TocFileList_SelectionChanged"/>
        <TextBlock Text="Zip file name:" Margin="0,10,0,5"/>
        <TextBox x:Name="ZipNameBox" Margin="0,0,0,10" Height="25"/>
        <TextBlock x:Name="SelectedFolderText" Text="No folder selected" Margin="0,0,0,10"/>
        <Button Content="Create Zip" Click="CreateZip_Click"/>
    </StackPanel>
</Window>
