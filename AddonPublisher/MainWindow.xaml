<Window x:Class="AddonPublisher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonPublisher"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="ToastPanel"
        Grid.RowSpan="2"
        Background="#DD323232"
        CornerRadius="5"
        Padding="10"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="10"
        Visibility="Collapsed"
        Opacity="0">
            <TextBlock x:Name="ToastText" Foreground="White" FontWeight="Bold"/>
        </Border>

        <Menu Grid.Row="0">
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="AboutMenu_Click"/>
                <MenuItem Header="_Check for Updates" Click="CheckForUpdates_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Select folder to zip:" Margin="0,0,0,5"/>
            <Button Content="Browse Folder" Click="BrowseFolder_Click" Margin="0,0,0,10"/>
            <TextBlock x:Name="SelectedFolderText" Text="No folder selected" Margin="0,0,0,10"/>
            <CheckBox x:Name="BumpVersionCheckbox" Content="Bump addon version in .toc file" Checked="BumpVersionCheckbox_Checked" Unchecked="BumpVersionCheckbox_Unchecked" Margin="0,0,0,10"/>
            <CheckBox x:Name="BumpAllCheckbox" Content="Bump version in all .toc files" IsEnabled="False" Margin="20,0,0,10"/>
            <TextBlock Text="Select .toc file (if multiple):" Margin="0,10,0,5"/>
            <ListBox x:Name="TocFileList" Visibility="Collapsed" Height="100" SelectionMode="Single" SelectionChanged="TocFileList_SelectionChanged"/>
            <TextBlock Text="Zip file name:" Margin="0,10,0,5"/>
            <TextBlock x:Name="ZipNameHint" TextWrapping="Wrap" FontStyle="Italic" Foreground="Gray" Margin="0,0,0,10"/>
            <TextBox x:Name="ZipNameBox" Margin="0,0,0,10" Height="25"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                <Button x:Name="CreateZipButton" Content="Create Zip" Click="CreateZip_Click" Margin="0,0,10,0"/>
                <Button x:Name="OpenFolderButton" Content="Show in Folder" Click="OpenFolder_Click" IsEnabled="False"/>
                <Button x:Name="DownloadUpdateButton" Content="Download Latest Version" Click="DownloadUpdateButton_Click" Visibility="Collapsed" Margin="0,0,0,10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
